<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.omnirom.omnistyle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_OVERLAY_PACKAGES" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:allowBackup="false"
        android:label="OmniStyle"
        android:icon="@drawable/ic_launcher_settings"
        android:theme="@style/Theme.OmniStyle"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".BrowseHeaderActivity"
            android:label="@string/browse_header" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PickHeaderActivity"
            android:label="@string/browse_header">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BrowseWallsActivity"
            android:label="@string/browse_walls"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".WallpaperActivity"
            android:label="@string/omni_walls"
            android:targetActivity="org.omnirom.omnistyle.BrowseWallsActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".nature"
            android:label="@string/nature_header" >
            <intent-filter>
                <action android:name="org.omnirom.DaylightHeaderPack1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".poly"
            android:label="@string/poly_header" >
            <intent-filter>
                <action android:name="org.omnirom.DaylightHeaderPack1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".naturerandom"
            android:label="@string/nature_header_random" >
            <intent-filter>
                <action android:name="org.omnirom.DaylightHeaderPack1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".wavvy"
            android:label="@string/wavvy_header" >
            <intent-filter>
                <action android:name="org.omnirom.DaylightHeaderPack1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".uw_sharm"
            android:label="@string/underwater_header" >
            <intent-filter>
                <action android:name="org.omnirom.DaylightHeaderPack1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".scenery"
            android:label="@string/scenery_header" >
            <intent-filter>
                <action android:name="org.omnirom.DaylightHeaderPack1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".got"
            android:label="@string/got_header" >
            <intent-filter>
                <action android:name="org.omnirom.DaylightHeaderPack1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".colorful"
            android:label="@string/colorful_header" >
            <intent-filter>
                <action android:name="org.omnirom.DaylightHeaderPack1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="org.omnirom.omnistyle.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>
</manifest>
